{
	"name": "tsproject-template",
	"version": "0.1.0",
	"description": "A simple TypeScript project structure template",
	"main": "dist/index.js",
	"types": "index.d.ts",
	"scripts": {
		"test": "jest",
		"version": "auto-changelog -p && git add CHANGELOG.md",
		"compile": "tsc",
		"type": "tsc --declaration --emitDeclarationOnly --outFile index.d.ts",
		"build": "npm run compile && npm run type"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MakeShiftArtist/tsproject-template.git"
	},
	"keywords": [
		"template",
		"typescript",
		"structure"
	],
	"author": "",
	"license": "CC0-1.0",
	"bugs": {
		"url": "https://github.com/MakeShiftArtist/tsproject-template/issues"
	},
	"homepage": "https://github.com/MakeShiftArtist/tsproject-template#readme",
	"devDependencies": {
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.35",
		"auto-changelog": "^2.4.0",
		"jest": "^28.1.0",
		"ts-jest": "^28.0.3",
		"ts-node": "^10.8.0",
		"typescript": "^4.7.2"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "changelog-template.hbs",
		"breakingPattern": "^\\S+\\!\\:",
		"issuePattern": "^[Ff][Ii][Xx]\\:",
		"replaceText": {
			"^[Ff][Ii][Xx]\\:": "Fix:",
			"^[Ff][Ii][Xx]\\!\\:": "Fix!:",
			"[Ff][Ee][Ae][Tt]\\:": "Feat:",
			"[Ff][Ee][Ae][Tt]\\!\\:": "Feat!:"
		}
	}
}
